<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Cherrycakes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/golden</item>
        <item name="colorPrimaryVariant">@color/golden</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="navigationItem">
        <item name="itemIconTint">@color/blue_sapphire</item>
        <item name="itemTextColor">@color/black</item>
        <item name="itemBackground">@color/white</item>
    </style>

    <style name="bottomnavigationItems">
        <item name="itemTextColor">@color/black</item>
        <item name="itemBackground">@color/blue_sapphire</item>
    </style>

    <style name="search_view">
        <item name="itemTextColor">@color/black</item>
    </style>

</resources>